<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rickandmortyapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.rhuarhri.rickandmortyapp.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_dead_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_dead_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestComposeApp">
        <activity
            android:name="com.rhuarhri.rickandmortyapp.view.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/Theme.TestComposeApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>